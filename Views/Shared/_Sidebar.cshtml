@using Microsoft.AspNetCore.Identity

@using Utal.Icc.Sgm.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div id="sidebar" class="app-sidebar">
	<div class="app-sidebar-content" data-scrollbar="true" data-height="100%">
		<div class="menu">
			@if (this.User.Identity!.IsAuthenticated) {
				<div class="menu-header">
					Mis roles y herramientas
				</div>
			} else {
				<div class="menu-header">
					Debes iniciar sesión para visualizar tus roles y herramientas
				</div>
			}
			@if (this.User.IsInRole(Roles.DirectorTeacher.ToString())) {
				<div class="menu-item has-sub">
					<a href="#" class="menu-link">
						<span class="menu-icon"><i class="fa fa-school"></i></span>
						<span class="menu-text">Director de carrera</span>
						<span class="menu-caret"><b class="caret"></b></span>
					</a>
					<div class="menu-submenu">
						<div class="menu-item">
							<a href="@this.Url.Action("Index", "Student", new { area = "DirectorTeacher" })" class="menu-link">
								<span class="menu-text">Estudiantes</span>
							</a>
						</div>
						<div class="menu-item">
							<a href="@this.Url.Action("Index", "Teacher", new { area = "DirectorTeacher" })" class="menu-link">
								<span class="menu-text">Profesores</span>
							</a>
						</div>
						<div class="menu-item">
							<a href="@this.Url.Action("Index", "Course", new { area = "DirectorTeacher" })" class="menu-link">
								<span class="menu-text">Cursos</span>
							</a>
						</div>
					</div>
				</div>
			}
