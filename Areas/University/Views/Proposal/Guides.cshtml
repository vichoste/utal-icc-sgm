@using Utal.Icc.Sgm
@using Utal.Icc.Sgm.ViewModels
@using Utal.Icc.Sgm.ViewModels.Shared

@model Paginator<ApplicationUserViewModel>

@{
	this.ViewData["Title"] = "Seleccionar profesor guía";
}

<div class="container">
	<partial name="_Alerts" />
	<div class="row justify-content-center">
		<div class="col-12 col-md-10 mb-3">
			<h2>@this.ViewData["Title"]</h2>
		</div>
		<div class="col-12 col-md-2 mb-3">
			@this.Html.ActionLink("Volver", "Index", "Proposal", new { area = "University" }, new { @class = "btn btn-secondary"})
		</div>
		<div class="col-12 mb-3">
			<partial name="_Filter", model=@(new FilterPartialViewModel("Guide", "Proposal", "University")) />
		</div>
	</div>
	<div class="row justify-content-center">
		<div class="col-12">
			<div class="table-responsive">
				<table class="table table-bordered">
					<thead class="table-dark">
						<tr>
							<th>
								<a asp-action="Guide" asp-route-sortOrder="@this.ViewData[$"FirstNameSortParam"]" asp-route-currentFilter="@this.ViewData["CurrentFilter"]">
									Nombre
								</a>
							</th>
							<th>
								<a asp-action="Guide" asp-route-sortOrder="@this.ViewData[$"LastNameSortParam"]" asp-route-currentFilter="@this.ViewData["CurrentFilter"]">
									Apellido
								</a>
							</th>
							<th>
								<a asp-action="Guide" asp-route-sortOrder="@this.ViewData[$"EmailSortParam"]" asp-route-currentFilter="@this.ViewData["CurrentFilter"]">
									E-mail
								</a>
							</th>
							<th>
								<a asp-action="Guide" asp-route-sortOrder="@this.ViewData[$"SpecializationSortParam"]" asp-route-currentFilter="@this.ViewData["CurrentFilter"]">
									Especialización
								</a>
							</th>
							<th>Acción</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in this.Model) {
							<tr>
								<td>@item.FirstName</td>
								<td>@item.LastName</td>
								<td>@item.Email</td>
								<td>@item.Specialization</td>
								<td>
									@this.Html.ActionLink("Seleccionar", "Create", "Proposal", new { area = "University", id = item.Id }, new { @class = "btn btn-success mb-3"})
								</td>
							</tr>
						}
					</tbody>
				</table>
				<partial name="_Paginator" , model=@(new PaginatorPartialViewModel("Index", this.Model.PageIndex, this.Model.TotalPages, this.Model.HasPreviousPage, this.Model.HasNextPage)) />
			</div>
		</div>
	</div>
</div>