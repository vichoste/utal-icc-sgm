@using Utal.Icc.Sgm.Areas.School.Controllers
@using Utal.Icc.Sgm.Areas.School.ViewModels.UserController

@model CsvFileViewModel

@{
	this.ViewData["Title"] = "Importar estudiantes desde CSV";
}

<div class="container">
	<partial name="_Alerts" />
	<div class="row justify-content-center">
		<div class="col-10">
			<div class="card">
				<div class="card-header text-center">@this.ViewData["Title"]</div>
				<div class="card-body">
					@using (this.Html.BeginForm(nameof(UserController.BatchCreateStudents), nameof(UserController).Replace("Controller", string.Empty), new { area = nameof(Utal.Icc.Sgm.Areas.School) }, FormMethod.Post, true, new { @enctype = "multipart/form-data" })) {
						<div class="row">
							<div class="col">
								<div class="mb-3">
									@this.Html.LabelFor(m => m.CsvFile, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.CsvFile, new { @class = "form-control", @type = "file" })
									@this.Html.ValidationMessageFor(m => m.CsvFile, "Archivo CSV requerido", new { @class = "invalid-feedback" })
								</div>
							</div>
						</div>
						<div class="row text-center">
							<div class="col">
								<div class="btn-group">
									@this.Html.ActionLink("Cancelar", nameof(UserController.Users),
								nameof(UserController).Replace("Controller", string.Empty), new { area =
								nameof(Utal.Icc.Sgm.Areas.School) }, new { @class = "btn btn-secondary" })
									<button type="submit" class="btn btn-teal">Importar</button>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>