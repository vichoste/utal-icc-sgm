@page

@model LoginModel

@{
	ViewData["Title"] = "Iniciar sesión";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
	<div class="col-md-4">
		<section>
			<form id="account" method="post">
				<h2>Utiliza una cuenta local para iniciar sesión.</h2>
				<hr />
				<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
				<div class="form-floating mb-3">
					<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="usuario@dominio.abc" />
					<label asp-for="Input.Email" class="form-label">Correo electrónico</label>
					<span asp-validation-for="Input.Email" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="contraseña" />
					<label asp-for="Input.Password" class="form-label">Contraseña</label>
					<span asp-validation-for="Input.Password" class="text-danger"></span>
				</div>
				<div class="checkbox mb-3">
					<label asp-for="Input.RememberMe" class="form-label">
						<input class="form-check-input" asp-for="Input.RememberMe" />
						@Html.DisplayNameFor(m => m.Input.RememberMe)
					</label>
				</div>
				<div>
					<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Iniciar sesión</button>
				</div>
				<div>
					<p>
						<a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
					</p>
					<p>
						<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarme</a>
					</p>
					<p>
						<a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar correo de confirmación</a>
					</p>
				</div>
			</form>
		</section>
	</div>
	<div class="col-md-6 col-md-offset-2">
		<section>
			<h3>Utilizar otro servicio para iniciar sesión.</h3>
			<hr />
			@{
				if ((Model.ExternalLogins?.Count ?? 0) == 0) {
					<div>
						<p>
							No hay servicios externos de autenticación. Ver <a href="https://go.microsoft.com/fwlink/?LinkID=532715"> este artículo para configurar esta aplicación de ASP.NET</a>.
						</p>
					</div>
				} else {
					<form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
						<div>
							<p>
								@foreach (var provider in Model.ExternalLogins!) {
									<button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Iniciar sesión mediante @provider.DisplayName">@provider.DisplayName</button>
								}
							</p>
						</div>
					</form>
				}
			}
		</section>
	</div>
</div>