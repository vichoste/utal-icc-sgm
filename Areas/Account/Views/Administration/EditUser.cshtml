@using Microsoft.AspNetCore.Identity

@using Utal.Icc.Sgm.Areas.Account.Views.Administration

@model EditUserViewModel

@{
	this.ViewData["Title"] = "Editar usuario";
}

<div class="container">
	@if (this.ViewBag.SuccessMessage is not null) {
		<div class="row justify-content-center">
			<div class="alert alert-success" role="alert">
				@this.ViewBag.SuccessMessage
			</div>
		</div>
	}
	@if (this.ViewBag.WarningMessage is not null) {
		<div class="row justify-content-center">
			<div class="alert alert-warning" role="alert">
				@this.ViewBag.WarningMessage
			</div>
		</div>
	}
	@if (this.ViewBag.WarningMessages is not null) {
		@foreach (var warning in this.ViewBag.WarningMessages) {
			<div class="row justify-content-center">
				<div class="alert alert-warning" role="alert">
					@warning
				</div>
			</div>
		}
	}
	@if (this.ViewBag.ErrorMessage is not null) {
		<div class="row justify-content-center">
			<div class="alert alert-danger" role="alert">
				@this.ViewBag.ErrorMessage
			</div>
		</div>
	}
	@if (this.ViewBag.ErrorMessages is not null) {
		@foreach (var error in this.ViewBag.ErrorMessages) {
			<div class="row justify-content-center">
				<div class="alert alert-danger" role="alert">
					@error
				</div>
			</div>
		}
	}
	<div class="row justify-content-center">
		<div class="col-10">
			<div class="card">
				<div class="card-header text-center">Editar usuario</div>
				<div class="card-body">
					@using (this.Html.BeginForm("EditUser", "Administration", new { area = "Account" })) {
						@this.Html.AntiForgeryToken()
						<div class="row was-validated">
							<div class="col">
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.FirstName, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.LastName, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.Rut, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.Rut, new { @class = "form-control" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.UniversityId, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.UniversityId, new { @class = "form-control" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.Email, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.CurrentPassword, new { @class = "form-label" })
									@this.Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.NewPassword, new { @class = "form-label" })
									@this.Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.ConfirmNewPassword, new { @class = "form-label" })
									@this.Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control" })
								</div>
								<hr>
								@* TODO: Remove validation for those fields *@
								<p><strong>Roles</strong></p>
								<div class="form-check mb-3">
									@this.Html.LabelFor(m => m.IsAdministrator, new { @class = "form-check-label" })
									@this.Html.CheckBoxFor(m => m.IsAdministrator, new { @class = "form-check-input" })
								</div>
								<div class="form-check mb-3">
									@this.Html.LabelFor(m => m.IsTeacher, new { @class = "form-check-label" })
									@this.Html.CheckBoxFor(m => m.IsTeacher, new { @class = "form-check-input" })
								</div>
								<div class="form-check mb-3">
									@this.Html.LabelFor(m => m.IsStudent, new { @class = "form-check-label" })
									@this.Html.CheckBoxFor(m => m.IsStudent, new { @class = "form-check-input" })
								</div>
							</div>
						</div>
						<div class="row text-center">
							<div class="col">
								<div class="btn-group">
									@this.Html.ActionLink("Cancelar", "Index", "Administration", new { area = "Account" }, new { @class = "btn btn-secondary" })
									<button type="submit" class="btn btn-primary">Editar usuario</button>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>