@using Microsoft.AspNetCore.Identity;
@using Utal.Icc.Sgm.Areas.Account.Views.Administrator

@model CreateUserViewModel

@{
	this.ViewData["Title"] = "Crear usuario";
}

@if (this.ViewBag.SuccessMessage is not null) {
	<div class="row justify-content-center">
		<div class="alert alert-success" role="alert">
			@this.ViewBag.SuccessMessage
		</div>
	</div>
}

@if (this.ViewBag.WarningMessage is not null) {
	<div class="row justify-content-center">
		<div class="alert alert-warning" role="alert">
			@this.ViewBag.WarningMessage
		</div>
	</div>
}

@if (this.ViewBag.WarningMessages is not null) {
	@foreach (var warning in this.ViewBag.WarningMessages) {
		<div class="row justify-content-center">
			<div class="alert alert-warning" role="alert">
				@warning
			</div>
		</div>
	}
}

@if (this.ViewBag.ErrorMessage is not null) {
	<div class="row justify-content-center">
		<div class="alert alert-danger" role="alert">
			@this.ViewBag.ErrorMessage
		</div>
	</div>
}

@if (this.ViewBag.ErrorMessages is not null) {
	@foreach (var error in this.ViewBag.ErrorMessages) {
		<div class="row justify-content-center">
			<div class="alert alert-danger" role="alert">
				@error
			</div>
		</div>
	}
}

<div class="container">
	<div class="row justify-content-center">
		<div class="col-6">
			<div class="card">
				<div class="card-header text-center">Crear un nuevo usuario</div>
				<div class="card-body">
					@using (this.Html.BeginForm("CreateUser", "Administrator", new { area = "Account" })) {
						@this.Html.AntiForgeryToken()
						<div class="row was-validated">
							<div class="col">
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.FirstName, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @required = "required" })
									@this.Html.ValidationMessageFor(m => m.FirstName, "Nombre requerido", new { @class = "invalid-feedback" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.LastName, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @required = "required" })
									@this.Html.ValidationMessageFor(m => m.LastName, "Apellido requerido", new { @class = "invalid-feedback" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.Email, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "required" })
									@this.Html.ValidationMessageFor(m => m.Email, "E-mail requerido", new { @class = "invalid-feedback" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.Password, new { @class = "form-label" })
									@this.Html.PasswordFor(m => m.Password, new { @class = "form-control", @required = "required" })
									@this.Html.ValidationMessageFor(m => m.Password, "Contraseña requerida", new { @class = "invalid-feedback" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
									@this.Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @required = "required" })
									@this.Html.ValidationMessageFor(m => m.ConfirmPassword, "Confirmación de contraseña requerida", new { @class = "invalid-feedback" })
								</div>
								@for (var i = 0; i < this.Model.Roles!.Count; i++) {
									<div class="form-check mb-3">
										@this.Html.LabelFor(m => m.Roles![i].Name, this.Model.Roles![i].Name, new { @class = "form-check-label" })
										@this.Html.CheckBoxFor(m => m.Roles![i].IsSelected, new { @class = "form-check-input", @value = this.Model.Roles[i].IsSelected })
									</div>
								}
							</div>
						</div>
						<div class="row text-center">
							<div class="col">
								<button type="submit" class="btn btn-primary">Crear usuario</button>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>