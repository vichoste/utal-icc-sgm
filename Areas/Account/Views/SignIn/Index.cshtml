@{
	ViewData["Title"] = "Iniciar sesión";
}

<div class="container">
	<div class="row justify-content-center">
		<div class="col-6">
			<div class="card">
				<div class="card-header text-center">Iniciar sesión</div>
				<div class="card-body">
					<form>
						<div class="row">
							<div class="col">
								<div class="form-group mb-3">
									<label class="form-label" for="inputEmail">E-mail</label>
									<input type="email" class="form-control" id="inputEmail" placeholder="ejemplo@utalca.cl" />
								</div>
								<div class="form-group mb-3">
									<label for="inputPassword" class="col col-form-label">Contraseña</label>
									<input type="password" class="form-control" id="inputPassword">
								</div>
							</div>
						</div>
						<div class="row text-center">
							<div class="col">
								<button type="submit" class="btn btn-primary">Ingresar</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>