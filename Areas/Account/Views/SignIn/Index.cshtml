@using Utal.Icc.Sgm.Areas.Account.ViewModels.SignIn
@using Utal.Icc.Sgm.Areas.Account.Controllers

@model IndexViewModel

@{
	this.ViewData["Title"] = "Iniciar sesión";
}

<div class="container">
	<partial name="_Alerts" />
	<div class="row justify-content-center">
		<div class="col-10">
			<div class="card">
				<div class="card-header text-center">@this.ViewData["Title"]</div>
				<div class="card-body">
					@using (this.Html.BeginForm("Index", "SignIn", new { area = "Account" })) {
						@this.Html.AntiForgeryToken()
						<div class="row">
							<div class="col">
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.Email, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.Password, new { @class = "form-label" })
									@this.Html.PasswordFor(m => m.Password, new { @class = "form-control" })
								</div>
								<div class="form-check">
									@this.Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
									@this.Html.LabelFor(m => m.RememberMe, new { @class = "form-check-label" })
								</div>
							</div>
						</div>
						<div class="row text-center">
							<div class="col">
								<button type="submit" class="btn btn-primary">Iniciar sesión</button>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>