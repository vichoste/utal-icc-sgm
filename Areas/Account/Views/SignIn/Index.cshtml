@using Utal.Icc.Sgm.Areas.Account.Views.SignIn

@model IndexViewModel

@{
	this.ViewData["Title"] = "Iniciar sesión";
}

<div class="container">
	@if (this.ViewBag.ErrorMessage is not null) {
		<div class="row justify-content-center">
			<div class="alert alert-danger" role="alert">
				@this.ViewBag.ErrorMessage
			</div>
		</div>
	}
	<div class="row justify-content-center">
		<div class="col-10">
			<div class="card">
				<div class="card-header text-center">Iniciar sesión</div>
				<div class="card-body">
					@using (this.Html.BeginForm("Index", "SignIn", new { area = "Account" })) {
						@this.Html.AntiForgeryToken()
						<div class="row was-validated">
							<div class="col">
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.Email, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "required" })
									@this.Html.ValidationMessageFor(m => m.Email, "Ingresa tu e-mail", new { @class = "invalid-feedback" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.Password, new { @class = "form-label" })
									@this.Html.PasswordFor(m => m.Password, new { @class = "form-control", @required = "required" })
									@this.Html.ValidationMessageFor(m => m.Password, "Ingresa tu contraseña", new { @class = "invalid-feedback" })
								</div>
								<div class="form-check">
									@* TODO: Remove validation for this field *@
									@this.Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
									@this.Html.LabelFor(m => m.RememberMe, new { @class = "form-check-label" })
								</div>
							</div>
						</div>
						<div class="row text-center">
							<div class="col">
								<button type="submit" class="btn btn-primary">Iniciar sesión</button>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>