@using Utal.Icc.Sgm.Areas.Account.Views.SignUp

@model IndexModel

@{
	this.ViewData["Title"] = "Registrarse";
}

<div class="container">
	<div class="row justify-content-center">
		<div class="col-6">
			<div class="card">
				<div class="card-header text-center">Registrarse</div>
				<div class="card-body">
					@using (this.Html.BeginForm("OnPost", "SignUp", new { area = "Account" })) {
						@this.Html.AntiForgeryToken()
						<div class="row was-validated">
							<div class="col">
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.FirstName, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @required = "required" })
									@this.Html.ValidationMessageFor(m => m.FirstName, "Ingresa tu nombre", new { @class = "invalid-feedback" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.LastName, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @required = "required" })
									@this.Html.ValidationMessageFor(m => m.LastName, "Ingresa tu apellido", new { @class = "invalid-feedback" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.Email, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "required" })
									@this.Html.ValidationMessageFor(m => m.Email, "Ingresa tu e-mail", new { @class = "invalid-feedback" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.Password, new { @class = "form-label" })
									@this.Html.PasswordFor(m => m.Password, new { @class = "form-control", @required = "required" })
									@this.Html.ValidationMessageFor(m => m.Password, "Ingresa tu contraseña", new { @class = "invalid-feedback" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
									@this.Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @required = "required" })
									@this.Html.ValidationMessageFor(m => m.ConfirmPassword, "Confirma tu contraseña", new { @class = "invalid-feedback" })
								</div>
							</div>
						</div>
						<div class="row text-center">
							<div class="col">
								<button type="submit" class="btn btn-primary">Iniciar sesión</button>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>