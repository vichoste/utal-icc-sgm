@using Utal.Icc.Sgm.Areas.Account.Views.Profile

@model IndexViewModel

@{
	this.ViewData["Title"] = "Mi información";
}

<div class="container">
	<partial name="_Alerts" />
	<div class="row justify-content-center">
		<div class="col-10">
			<div class="card">
				<div class="card-header text-center">@this.ViewData["Title"]</div>
				<div class="card-body">
					<div class="row">
						<div class="col-sm-12 col-md-6 mb-3">
							<b>@this.Html.LabelFor(m => m.FirstName)</b>
						</div>
						<div class="col-sm-12 col-md-6 mb-3">
							@this.Html.DisplayFor(m => m.FirstName)
						</div>
						<div class="col-sm-12 col-md-6 mb-3">
							<b>@this.Html.LabelFor(m => m.LastName)</b>
						</div>
						<div class="col-sm-12 col-md-6 mb-3">
							@this.Html.DisplayFor(m => m.LastName)
						</div>
						<div class="col-sm-12 col-md-6 mb-3">
							<b>@this.Html.LabelFor(m => m.Rut)</b>
						</div>
						<div class="col-sm-12 col-md-6 mb-3">
							@this.Html.DisplayFor(m => m.Rut)
						</div>
						<div class="col-sm-12 col-md-6 mb-3">
							<b>@this.Html.LabelFor(m => m.Email)</b>
						</div>
						<div class="col-sm-12 col-md-6 mb-3">
							@this.Html.DisplayFor(m => m.Email)
						</div>
					</div>
					<hr />
					<div class="row text-center">
						<div class="col-sm-12 col-md-6 mb-3 text-muted">
							<b>@this.Html.LabelFor(m => m.CreatedAt)</b>
						</div>
						<div class="col-sm-12 col-md-6 mb-3 text-muted">
							@this.Html.HiddenFor(m => m.CreatedAt)
							@this.Html.DisplayFor(m => m.CreatedAt)
						</div>
						<div class="col-sm-12 col-md-6 mb-3 text-muted">
							<b>@this.Html.LabelFor(m => m.UpdatedAt)</b>
						</div>
						<div class="col-sm-12 col-md-6 mb-3 text-muted">
							@this.Html.HiddenFor(m => m.UpdatedAt)
							@this.Html.DisplayFor(m => m.UpdatedAt)
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>