@using Utal.Icc.Sgm.ViewModels

@model ApplicationUserViewModel

@{
	this.ViewData["Title"] = "Mi perfil de profesor";
}

<div class="container">
	<partial name="_Alerts" />
	<div class="row justify-content-center">
		<div class="col-10">
			<div class="card">
				<div class="card-header text-center">@this.ViewData["Title"]</div>
				<div class="card-body">
					@using (this.Html.BeginForm("Teacher", "Profile", new { area = "Account" })) {
						@this.Html.AntiForgeryToken()
						<div class="row">
							<div class="col">
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.Office, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.Office, new { @class = "form-control" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.Schedule, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.Schedule, new { @class = "form-control" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.Specialization, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.Specialization, new { @class = "form-control" })
								</div>
							</div>
						</div>
						<div class="row text-center">
							<div class="col">
								<div class="btn-group">
									@this.Html.ActionLink("Cancelar", "Index", "Profile", new { area = "Account" }, new { @class = "btn btn-secondary" })
									<button type="submit" class="btn btn-primary">Actualizar perfil</button>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>