@using Utal.Icc.Sgm.Areas.Account.Controllers
@using Utal.Icc.Sgm.Areas.Account.ViewModels.Profile

@model ChangePasswordViewModel

@{
	this.ViewData["Title"] = "Cambiar contraseña";
}

<div class="container">
	<partial name="_Alerts" />
	<div class="row justify-content-center">
		<div class="col-10">
			<div class="card">
				<div class="card-header text-center">@this.ViewData["Title"]</div>
				<div class="card-body">
					@using (this.Html.BeginForm(nameof(ProfileController.ChangePassword), nameof(ProfileController).Replace("Controller", string.Empty), new { area = nameof(Utal.Icc.Sgm.Areas.Account) })) {
						@this.Html.AntiForgeryToken()
						<div class="row">
							<div class="col">
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.CurrentPassword, new { @class = "form-label" })
									@this.Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control", @required = "required" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.NewPassword, new { @class = "form-label" })
									@this.Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @required = "required" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.ConfirmNewPassword, new { @class = "form-label" })
									@this.Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control", @required = "required" })
								</div>
							</div>
						</div>
						<div class="row text-center">
							<div class="col">
								<div class="btn-group">
									@this.Html.ActionLink("Cancelar", nameof(ProfileController.Index), nameof(ProfileController).Replace("Controller", string.Empty), new { area = string.Empty }, new { @class = "btn btn-secondary" })
									<button type="submit" class="btn btn-primary">Cambiar contraseña</button>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>