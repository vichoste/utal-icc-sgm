@using Utal.Icc.Sgm.Areas.Account.Views.User

@model ChangePasswordViewModel

@{
	this.ViewData["Title"] = "Cambiar contraseña";
}

<div class="container">
	@if (this.ViewBag.SuccessMessage is not null) {
		<div class="row justify-content-center">
			<div class="alert alert-success" role="alert">
				@this.ViewBag.SuccessMessage
			</div>
		</div>
	}
	@if (this.ViewBag.WarningMessage is not null) {
		<div class="row justify-content-center">
			<div class="alert alert-warning" role="alert">
				@this.ViewBag.WarningMessage
			</div>
		</div>
	}
	@if (this.ViewBag.WarningMessages is not null) {
		@foreach (var warning in this.ViewBag.WarningMessages) {
			<div class="row justify-content-center">
				<div class="alert alert-warning" role="alert">
					@warning
				</div>
			</div>
		}
	}
	@if (this.ViewBag.ErrorMessage is not null) {
		<div class="row justify-content-center">
			<div class="alert alert-danger" role="alert">
				@this.ViewBag.ErrorMessage
			</div>
		</div>
	}
	@if (this.ViewBag.ErrorMessages is not null) {
		@foreach (var error in this.ViewBag.ErrorMessages) {
			<div class="row justify-content-center">
				<div class="alert alert-danger" role="alert">
					@error
				</div>
			</div>
		}
	}
	<div class="row justify-content-center">
		<div class="col-10">
			<div class="card">
				<div class="card-header text-center">Cambiar contraseña</div>
				<div class="card-body">
					@using (this.Html.BeginForm("ChangePassword", "User", new { area = "Account" })) {
						@this.Html.AntiForgeryToken()
						<div class="row was-validated">
							<div class="col">
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.CurrentPassword, new { @class = "form-label" })
									@this.Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control", @required = "required" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.NewPassword, new { @class = "form-label" })
									@this.Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @required = "required" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.ConfirmNewPassword, new { @class = "form-label" })
									@this.Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control", @required = "required" })
								</div>
							</div>
						</div>
						<div class="row text-center">
							<div class="col">
								<div class="btn-group">
									@this.Html.ActionLink("Cancelar", "Index", "Home", new { area = "" }, new { @class = "btn btn-secondary" })
									<button type="submit" class="btn btn-primary">Cambiar contraseña</button>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>