@using Utal.Icc.Sgm.ViewModels
@using Utal.Icc.Sgm.Areas.GuideTeacher.Controllers

@model GuideTeacherProposalViewModel

@{
	this.ViewData["Title"] = "Publicar propuesta";
}

<div class="container">
	<partial name="_Alerts" />
	<div class="row justify-content-center">
		<div class="col-10">
			<div class="card">
				<div class="card-header text-center">@this.ViewData["Title"]</div>
				<div class="card-body text-center">
					@using (this.Html.BeginForm(nameof(GuideTeacherProposalController.Publish), nameof(GuideTeacherProposalController).Replace("Controller", string.Empty), new { area = nameof(Utal.Icc.Sgm.Areas.GuideTeacher) })) {
						@this.Html.AntiForgeryToken()
						@this.Html.HiddenFor(m => m.Id)
						<h5 class="card-title mb-3">¿Deseas <b class="text-primary">publicar</b> esta propuesta a <b>los estudiantes</b>?</h5>
						<h6 class="card-subtitle mb-3 text-muted">@this.Html.DisplayFor(m => m.Title)</h6>
						<div class="row text-center">
							<div class="col">
								<div class="btn-group">
									@this.Html.ActionLink("No", nameof(GuideTeacherProposalController.Index), nameof(GuideTeacherProposalController).Replace("Controller", string.Empty), new { area = nameof(Utal.Icc.Sgm.Areas.GuideTeacher) }, new { @class = "btn btn-secondary" })
									<button type="submit" class="btn btn-primary">Sí</button>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>