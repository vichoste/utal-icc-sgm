@using Utal.Icc.Sgm
@using Utal.Icc.Sgm.Models
@using Utal.Icc.Sgm.ViewModels
@using Utal.Icc.Sgm.Views.Shared
@using Utal.Icc.Sgm.Areas.GuideTeacher.Controllers

@model PaginatedList<GuideTeacherProposalViewModel>

@{
	this.ViewData["Title"] = "Propuestas de profesores guía";
}

<div class="container">
	<partial name="_Alerts" />
	<div class="row justify-content-center">
		<div class="col-12 col-md-10 mb-3">
			<h2>@this.ViewData["Title"]</h2>
		</div>
		<div class="col-12 col-md-2 mb-3">
			@this.Html.ActionLink("Crear propuesta", nameof(GuideTeacherProposalController.Create), nameof(GuideTeacherProposalController).Replace("Controller", string.Empty), new { area = nameof(Utal.Icc.Sgm.Areas.GuideTeacher) }, new { @class = "btn btn-success"})
		</div>
		<div class="col-12 mb-3">
			<partial name="_Filter", model=@(new FilterPartialViewModel(nameof(GuideTeacherProposalController.Index), nameof(GuideTeacherProposalController).Replace("Controller", string.Empty), nameof(Utal.Icc.Sgm.Areas.Student))) />
		</div>
	</div>
	<div class="row justify-content-center">
		<div class="col-12">
			<div class="table-responsive">
				<table class="table table-bordered">
					<thead class="table-dark">
						<tr>
							<th>
								<a asp-action="@nameof(GuideTeacherProposalController.Index)" asp-route-sortOrder="@this.ViewData[$"{nameof(GuideTeacherProposalViewModel.Title)}SortParam"]" asp-route-currentFilter="@this.ViewData["CurrentFilter"]">
									Título
								</a>
							</th>
							<th>Estado</th>
							<th>Acciones</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in this.Model) {
							<tr>
								<td>@item.Title</td>
								<td>
									@switch (item.ProposalStatus) {
										case nameof(GuideTeacherProposal.Status.Draft):
											<span class="badge bg-secondary">Borrador</span>
											break;
										case nameof(GuideTeacherProposal.Status.Published):
											<span class="badge bg-primary">Enviada</span>
											break;
										case nameof(GuideTeacherProposal.Status.Ready):
											<span class="badge bg-success">Lista</span>
											break;
									}
								</td>
								<td>
									@if (item.ProposalStatus == nameof(GuideTeacherProposal.Status.Draft)) {
										@this.Html.ActionLink("Editar", nameof(GuideTeacherProposalController.Edit), nameof(GuideTeacherProposalController).Replace("Controller", string.Empty), new { area = nameof(Utal.Icc.Sgm.Areas.GuideTeacher), id = item.Id }, new { @class = "btn btn-yellow mb-3"})
										@this.Html.ActionLink("Eliminar", nameof(GuideTeacherProposalController.Delete), nameof(GuideTeacherProposalController).Replace("Controller", string.Empty), new { area = nameof(Utal.Icc.Sgm.Areas.GuideTeacher), id = item.Id }, new { @class = "btn btn-danger mb-3"})
										@this.Html.ActionLink("Publicar", nameof(GuideTeacherProposalController.Publish), nameof(GuideTeacherProposalController).Replace("Controller", string.Empty), new { area = nameof(Utal.Icc.Sgm.Areas.GuideTeacher), id = item.Id }, new { @class = "btn btn-primary mb-3"})
									} else if (item.ProposalStatus == nameof(GuideTeacherProposal.Status.Published)) {
										@this.Html.ActionLink("Postulaciones", nameof(GuideTeacherProposalController.Student), nameof(GuideTeacherProposalController).Replace("Controller", string.Empty), new { area = nameof(Utal.Icc.Sgm.Areas.GuideTeacher), id = item.Id }, new { @class = "btn btn-success mb-3"})
									} else if (item.ProposalStatus == nameof(GuideTeacherProposal.Status.Ready)) {
										@this.Html.ActionLink("Convertir", nameof(GuideTeacherProposalController.Convert), nameof(GuideTeacherProposalController).Replace("Controller", string.Empty), new { area = nameof(Utal.Icc.Sgm.Areas.GuideTeacher), id = item.Id }, new { @class = "btn btn-success mb-3"})
									}
								</td>
							</tr>
						}
					</tbody>
				</table>
				@{
					var prevDisabled = !this.Model.HasPreviousPage ? "disabled" : "";
					var nextDisabled = !this.Model.HasNextPage ? "disabled" : "";
				}
				<ul class="pagination mb-0">
					<li class="page-item @prevDisabled">
						<a asp-action="@nameof(GuideTeacherProposalController.Index)" asp-route-sortOrder="@this.ViewData["CurrentSort"]" asp-route-pageNumber="@(this.Model.PageIndex - 1)" asp-route-currentFilter="@this.ViewData["CurrentFilter"]" class="page-link">
							Anterior página
						</a>
					</li>
					@for (var i = 0; i < this.Model.TotalPages; i++) {
						<li class="page-item @(i + 1 == this.Model.PageIndex ? " active" : "")">
							<a asp-action="@nameof(GuideTeacherProposalController.Index)" asp-route-sortOrder="@this.ViewData["CurrentSort"]" asp-route-pageNumber="@(i + 1)" asp-route-currentFilter="@this.ViewData["CurrentFilter"]" class="page-link">
								@(i + 1)
							</a>
						</li>
					}
					<li class="page-item @nextDisabled">
						<a asp-action="@nameof(GuideTeacherProposalController.Index)" asp-route-sortOrder="@this.ViewData["CurrentSort"]" asp-route-pageNumber="@(this.Model.PageIndex + 1)" asp-route-currentFilter="@this.ViewData["CurrentFilter"]" class="page-link">
							Siguiente página
						</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>