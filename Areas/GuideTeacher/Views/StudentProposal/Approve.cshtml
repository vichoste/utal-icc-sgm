@using Utal.Icc.Sgm.Areas.GuideTeacher.Views.Proposal
@using Utal.Icc.Sgm.Models
@using static Utal.Icc.Sgm.Models.ApplicationUser

@model ApproveViewModel

@{
	this.ViewData["Title"] = "Aprobar propuesta";
}

<div class="container">
	<partial name="_Alerts" />
	<div class="row justify-content-center">
		<div class="col-10">
			<div class="card">
				<div class="card-header text-center">@this.ViewData["Title"]</div>
				<div class="card-body text-center">
					@using (this.Html.BeginForm("Approve", nameof(StudentProposal), new { area = nameof(Roles.GuideTeacher) })) {
						@this.Html.AntiForgeryToken()
						@this.Html.HiddenFor(m => m.Id)
						@this.Html.HiddenFor(m => m.Title)
						@this.Html.HiddenFor(m => m.Student)
						<h5 class="card-title">¿Deseas <b class="text-success">aprobar</b> la propuesta del estudiante <b>@this.Html.DisplayFor(m => m.Student)</b>?</h5>
						<h6 class="card-subtitle mb-3 text-muted">@this.Html.DisplayFor(m => m.Title)</h6>
						<div class="row text-center">
							<div class="col">
								<div class="btn-group">
									@this.Html.ActionLink("No", "View", nameof(StudentProposal), new { area = nameof(Roles.GuideTeacher), id = this.Model.Id }, new { @class = "btn btn-secondary" })
									<button type="submit" class="btn btn-success">Sí</button>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>