@using Utal.Icc.Sgm.Areas.DirectorTeacher.Views.Student

@model DeleteViewModel

@{
	this.ViewData["Title"] = "Eliminar estudiante";
}

<div class="container">
	@if (this.ViewBag.SuccessMessage is not null) {
		<div class="row justify-content-center">
			<div class="alert alert-success" role="alert">
				@this.ViewBag.SuccessMessage
			</div>
		</div>
	}
	@if (this.ViewBag.WarningMessage is not null) {
		<div class="row justify-content-center">
			<div class="alert alert-warning" role="alert">
				@this.ViewBag.WarningMessage
			</div>
		</div>
	}
	@if (this.ViewBag.WarningMessages is not null) {
		@foreach (var warning in this.ViewBag.WarningMessages) {
			<div class="row justify-content-center">
				<div class="alert alert-warning" role="alert">
					@warning
				</div>
			</div>
		}
	}
	@if (this.ViewBag.ErrorMessage is not null) {
		<div class="row justify-content-center">
			<div class="alert alert-danger" role="alert">
				@this.ViewBag.ErrorMessage
			</div>
		</div>
	}
	@if (this.ViewBag.ErrorMessages is not null) {
		@foreach (var error in this.ViewBag.ErrorMessages) {
			<div class="row justify-content-center">
				<div class="alert alert-danger" role="alert">
					@error
				</div>
			</div>
		}
	}
	<div class="card">
		<div class="card-header text-center">@this.ViewData["Title"]</div>
		<div class="card-body text-center">
			@using (this.Html.BeginForm("Delete", "Student", new { area = "DirectorTeacher" })) {
				<h5 class="card-title">¿Estás seguro que quieres eliminar a este estudiante?</h5>
				@this.Html.AntiForgeryToken()
				@this.Html.HiddenFor(m => m.Id)
				<h6 class="card-subtitle mb-3 text-muted">@this.Html.DisplayFor(m => m.Email)</h6>
				<div>
					@this.Html.ActionLink("Cancelar", "Index", "Student", new { area = "DirectorTeacher" }, new { @class = "btn btn-secondary" })
					<button type="submit" class="btn btn-danger">Eliminar</button>
				</div>
			}
		</div>
	</div>
</div>