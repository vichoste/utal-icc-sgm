@using Microsoft.AspNetCore.Identity

@using Utal.Icc.Sgm.Areas.DirectorTeacher.Views.Student

@model EditViewModel

@{
	this.ViewData["Title"] = "Editar estudiante";
}

<div class="container">
	@if (this.ViewBag.SuccessMessage is not null) {
		<div class="row justify-content-center">
			<div class="alert alert-success" role="alert">
				@this.ViewBag.SuccessMessage
			</div>
		</div>
	}
	@if (this.ViewBag.SuccessMessages is not null) {
		@foreach (var success in this.ViewBag.SuccessMessages) {
			<div class="row justify-content-center">
				<div class="alert alert-success" role="alert">
					@success
				</div>
			</div>
		}
	}
	<div class="row justify-content-center">
		<div class="col-10">
			<div class="card">
				<div class="card-header text-center">@this.ViewData["Title"]</div>
				<div class="card-body">
					@using (this.Html.BeginForm("Edit", "Student", new { area = "DirectorTeacher" })) {
						@this.Html.AntiForgeryToken()
						@this.Html.HiddenFor(m => m.Id)
						<div class="row was-validated">
							<div class="col">
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.FirstName, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.LastName, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.UniversityId, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.UniversityId, new { @class = "form-control" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.Rut, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.Rut, new { @class = "form-control" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.Email, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
								</div>
							</div>
						</div>
						<div class="row text-center">
							<div class="col">
								<div class="btn-group">
									@this.Html.ActionLink("Volver al inicio", "Index", "Student", new { area = "DirectorTeacher" }, new { @class = "btn btn-secondary" })
									<button type="submit" class="btn btn-primary">Editar</button>
								</div>
							</div>
						</div>
						<hr />
						<div class="row text-center">
							<div class="col-sm-12 col-md-6 mb-3 text-muted">
								<b>@this.Html.LabelFor(m => m.CreatedAt)</b>
							</div>
							<div class="col-sm-12 col-md-6 mb-3 text-muted">
								@this.Html.HiddenFor(m => m.CreatedAt)
								@this.Html.DisplayFor(m => m.CreatedAt)
							</div>
							<div class="col-sm-12 col-md-6 mb-3 text-muted">
								<b>@this.Html.LabelFor(m => m.UpdatedAt)</b>
							</div>
							<div class="col-sm-12 col-md-6 mb-3 text-muted">
								@this.Html.HiddenFor(m => m.UpdatedAt)
								@this.Html.DisplayFor(m => m.UpdatedAt)
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>