@using Utal.Icc.Sgm.Areas.Student.Views.StudentProposal
@using Utal.Icc.Sgm.Models
@using static Utal.Icc.Sgm.Models.ApplicationUser
@using Utal.Icc.Sgm.Areas.Student.Controllers

@model ViewRejectionReasonViewModel

@{
	this.ViewData["Title"] = "Ver rechazo de la propuesta";
}

<div class="container">
	<partial name="_Alerts" />
	<div class="row justify-content-center">
		<div class="col-10">
			<div class="card">
				<div class="card-header text-center">@this.ViewData["Title"]</div>
				<div class="card-body">
					@using (this.Html.BeginForm()) {
						<div class="row">
							<div class="col">
								<div class="form-group mb-3">
									@this.Html.HiddenFor(m => m.Title)
									@this.Html.LabelFor(m => m.Title, new { @class = "form-label" }):
									@this.Html.DisplayFor(m => m.Title, new { @class = "form-control" })
								</div>
								<div class="form-group mb-3">
									@this.Html.HiddenFor(m => m.Description)
									@this.Html.LabelFor(m => m.Description, new { @class = "form-label" }):
									@this.Html.DisplayFor(m => m.Description, new { @class = "form-control" })
								</div>
								<div class="form-group mb-3">
									@this.Html.HiddenFor(m => m.RejectedBy)
									@this.Html.LabelFor(m => m.RejectedBy, new { @class = "form-label" }):
									@this.Html.DisplayFor(m => m.RejectedBy, new { @class = "form-control" })
								</div>
								<div class="form-group mb-3">
									@this.Html.HiddenFor(m => m.Reason)
									@this.Html.LabelFor(m => m.Reason, new { @class = "form-label" }):
									@this.Html.DisplayFor(m => m.Reason, new { @class = "form-control" })
								</div>
								<hr />
								<div class="form-group mb-3 text-muted">
									@this.Html.HiddenFor(m => m.CreatedAt)
									@this.Html.LabelFor(m => m.CreatedAt, new { @class = "form-label" }):
									@this.Html.DisplayFor(m => m.CreatedAt, new { @class = "form-control" })
								</div>
								<div class="form-group mb-3 text-muted">
									@this.Html.HiddenFor(m => m.UpdatedAt)
									@this.Html.LabelFor(m => m.UpdatedAt, new { @class = "form-label" }):
									@this.Html.DisplayFor(m => m.UpdatedAt, new { @class = "form-control" })
								</div>
								<div class="row text-center">
									<div class="col">
										<div class="btn-group">
											@this.Html.ActionLink("Volver", nameof(StudentProposalController.Index), nameof(StudentProposal), new { area = nameof(Roles.Student) }, new { @class = "btn btn-secondary" })
										</div>
									</div>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>